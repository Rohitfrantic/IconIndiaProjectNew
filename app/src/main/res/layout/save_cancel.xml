<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:CustomTextView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.ankur.taskapp.manager.utills.CustomTextView
        android:id="@+id/dia_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:text="Cancel"
        android:textColor="@color/txt_color"
        android:gravity="center"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
         CustomTextView:textStyle="8"
        android:textSize="@dimen/sp_10"/>
    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_20"
        android:layout_gravity="center_vertical"
        android:background="@color/lightgray"/>

    <com.ankur.taskapp.manager.utills.CustomTextView
        android:id="@+id/dia_save"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="0dp"
        CustomTextView:textStyle="8"
        android:layout_height="wrap_content"
        android:entries="@array/array_name1"
        android:layout_weight="6"
        android:text="Submit"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_10"/>
</LinearLayout>




