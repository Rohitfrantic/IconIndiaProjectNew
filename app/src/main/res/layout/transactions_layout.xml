<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CustomxTextView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_5"
        android:weightSum="3"
        android:background="@color/shaded_white"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="@dimen/dp_110"

            android:entries="@array/task_type"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center"

            android:entries="@array/task_type"
            />
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="@dimen/dp_110"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="@dimen/dp_30"

            android:entries="@array/task_type"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_no_records"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nodata"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_no_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_20"
            android:text=""
            android:textColor="@color/star_color" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView

        android:id="@+id/fragment_frag__erection_rv__erection"
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_50"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>